<% layout('/layout/boilerplate') %>
<h1>All Grounds</h1>
<div>
    <a href="/ground/new">Add Ground</a>
</div>
<h2>Trending</h2>
<%for(let [key,value] of arr){%>
            
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=value.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= value.title %> </h5>
                    <p class="card-text"><%=value.description%></p>
    
                    <p class="card-text"><%=value.location%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=value.price %></small>
                    </p>
                    <a class="btn btn-primary" href="/ground/<%=value.id%>">View</a>
                </div>
            </div>
        </div>
    </div>
<%}%>

<h2> normal</h2>
<% for (let grd of grounds){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=grd.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= grd.title %> </h5>
                <p class="card-text"><%=grd.description%></p>

                <p class="card-text"><%=grd.location%></p>
                <p class="card-text">
                    <small class="text-muted"><%= grd.price %></small>
                </p>
                <a class="btn btn-primary" href="/ground/<%=grd._id%>">View</a>
            </div>
        </div>
    </div>
</div>
<% }%>
